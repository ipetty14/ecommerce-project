<form method="POST" action="/cart">
  <button
    class="bg-white text-indigo-500 active:bg-indigo-600 hover:bg-indigo-600 font-bold uppercase text-sm px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1"
    type="submit"
    style="transition: all 0.15s ease"
  >
    Add to Cart
  </button>
  <input type="hidden" name="productId" value="<%= productId %>" />
</form>
