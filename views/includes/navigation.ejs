<nav
  class="relative flex flex-wrap items-center justify-between px-2 py-3 navbar-expand-lg bg-indigo-500 mb-3"
>
  <div
    class="container px-4 mx-auto flex flex-wrap items-center justify-between"
  >
    <div
      class="w-full relative flex justify-between lg:w-auto lg:static lg:block lg:justify-start"
    >
      <a
        class="text-lg font-bold leading-relaxed inline-block mr-4 py-2 whitespace-no-wrap uppercase text-white"
        href="/"
      >
        Bored Games
      </a>
      <button
        class="cursor-pointer text-xl leading-none px-3 py-1 border border-solid border-transparent rounded bg-transparent block lg:hidden outline-none focus:outline-none"
        type="button"
        onclick="toggleNavbar('example-navbar-warning')"
      >
        <span class="block relative w-6 h-px rounded-sm bg-white"></span>
        <span class="block relative w-6 h-px rounded-sm bg-white mt-1"></span>
        <span class="block relative w-6 h-px rounded-sm bg-white mt-1"></span>
      </button>
    </div>
    <div class="lg:flex flex-grow items-center">
      <ul class="flex flex-col lg:flex-row list-none mr-auto">
        <li class="nav-item">
          <a
            class="px-3 py-2 flex items-center text-sm font-bold leading-snug text-white hover:opacity-75 <%= path === '/products' ? 'active:opacity-75' : '' %>"
            href="/products"
          >
            Products
          </a>
        </li>
        <% if (isAuthenticated) { %>
        <li class="nav-item">
          <a
            class="px-3 py-2 flex items-center text-sm font-bold leading-snug text-white hover:opacity-75 <%= path === '/cart' ? 'active:opacity-75' : '' %>"
            href="/cart"
          >
            Cart
          </a>
        </li>
        <li class="nav-item">
          <a
            class="px-3 py-2 flex items-center text-sm font-bold leading-snug text-white hover:opacity-75 <%= path === '/orders' ? 'active:opacity-75' : '' %>"
            href="/orders"
          >
            Orders
          </a>
        </li>

        <li class="nav-item">
          <a
            class="px-3 py-2 flex items-center text-sm font-bold leading-snug text-white hover:opacity-75 <%= path === '/admin/products' ? 'active:opacity-75' : '' %>"
            href="/admin/products"
          >
            Admin Products
          </a>
        </li>
        <li class="nav-item">
          <a
            class="px-3 py-2 flex items-center text-sm font-bold leading-snug text-white hover:opacity-75 <%= path === '/admin/add-product' ? 'active:opacity-75' : '' %>"
            href="/admin/add-product"
          >
            Add Products
          </a>
        </li>
        <% } %>
      </ul>
    </div>
    <div class="lg:flex flex-grow items-center">
      <ul class="flex flex-col lg:flex-row list-none ml-auto">
        <% if (!isAuthenticated) { %>
        <li class="nav-item">
          <a
            class="px-3 py-2 flex items-center text-sm font-bold leading-snug text-white hover:opacity-75 <%= path === '/login' ? 'active:opacity-75' : '' %>"
            href="/login"
          >
            Login
          </a>
        </li>
        <% } else { %>
        <li class="nav-item">
          <p
            class="px-3 py-2 flex items-center text-sm font-bold leading-snug text-white"
          >
            <%= isAuthenticated.email %>
          </p>
        </li>
        <li class="nav-item">
          <form action="/logout" method="POST">
            <button
              class="px-3 py-2 flex items-center text-sm font-bold leading-snug text-white hover:opacity-75 focus:outline-none <%= path === '/login' ? 'active:opacity-75' : '' %>"
            >
              Logout
            </button>
          </form>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
<script>
  function toggleNavbar(collapseID) {
    document.getElementById(collapseID).classList.toggle('hidden');
    document.getElementById(collapseID).classList.toggle('flex');
  }
</script>
